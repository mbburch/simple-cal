<div class="row">
  <div class="col-12 col-md-2">
    <div class="row">
      <h6>Categories</h6>
      <div class="list-group col-12">
        <% @categories.each do |category| %>
          <%= link_to category.name, edit_category_path(category), style:"background-color:#{category.color}; color:white", class:"list-group-item list-group-item-action small" %>
        <% end %>
        <%= link_to "New Category", new_category_path, class:"list-group-item list-group-item-action small" %>
      </div>
    </div>

  </div>
  <div class="col-12 col-md-10">
    <%= link_to "New Event", new_event_path, class:"btn btn-success" %>
    <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>
      <% events.each do |event| %>
        <div>
          <%= link_to event.title, event_path(event), style:"color:#{listing_color(event)}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
