<div class="row">
  <%= simple_form_for @event do |f| %>
    <div class="row">
      <%= f.input :title, wrapper_html: { class: 'm6 s12' } %>
    </div>
    <div class="row">
      <%= f.input :description, wrapper_html: { class: 'm6 s12' } %>
    </div>
    <div class="row">
      <div class="input-field col m6 s12">
        <%= f.label :start_time, 'From', style: 'position: relative; left: 0' %>
        <%= f.datetime_local_field :start_time %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col m6 s12">
        <%= f.label :end_time, 'Until', style: 'position: relative; left: 0'  %>
        <%= f.datetime_local_field :end_time %>
      </div>
    </div>
    <div class="row">
      <%= f.input :active, wrapper: :materialize_boolean, wrapper_html: { class: 'm3 s6' } %>
      <%= f.input :private, wrapper: :materialize_boolean, wrapper_html: { class: 'm3 s6' } %>
    </div>
    <%= f.button :submit %>
  <% end %>
</div>
